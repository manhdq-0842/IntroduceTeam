        <record id="view_onsignal_form" model="ir.ui.view">
            <field name="name">onesignal.view.form</field>
            <field name="model">onesignal.config</field>
            <field name="arch" type="xml">
                <form string="OneSignal Notifications" create="false" delete="false">
                    <xpath expr="//button[@name='action_cancel']" position="replace">
                    </xpath>
                    <header>
                        <button style="margin-top: 4px; margin-bottom: 4px;" string="Apply" type="object"
                                name="set_values" class="oe_highlight"/>
                    </header>

                    <sheet>
                        <div class="row mt16 o_settings_container">
                            <div class="col-xs-12 col-md-6 o_setting_box">
                                <div class="o_setting_left_pane">
                                    <field name="activate_onesignal"/>
                                </div>
                                <div class="o_setting_right_pane">
                                    <label for="activate_onesignal"/>
                                    <div class="text-muted">
                                        Choose to activate OneSignal Notifications
                                    </div>
                                </div>
                            </div>
                        </div>
                    </sheet>
                </form>
            </field>
        </record>

        <record model="ir.actions.act_window" id="action_onesignal">
            <field name="name">OneSinal Configurations</field>
            <field name="res_model">onesignal.config</field>
            <field name="view_id" ref="view_onsignal_form"/>
            <field name="view_mode">form</field>
        </record>

        <menuitem id="menu_onesignal"
                  parent="contact_menu"
                  name="OneSignal Notifications"
                  action="action_onesignal"
                  sequence="50"
        />
